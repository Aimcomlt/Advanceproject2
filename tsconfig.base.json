{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@contracts/*": ["contracts/*"],
      "@frontend/*": ["frontend/*"],
      "@tooling/*": ["tooling/*"],
      "@scripts/*": ["scripts/*"],
      "@test/*": ["test/*"]
    }
  }
}
